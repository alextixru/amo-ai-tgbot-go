# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Debug mode (true/false)
DEBUG=false

# Ollama AI
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=gpt-oss:120b-cloud

# amoCRM Auth Mode: "token" or "oauth"
AMOCRM_AUTH_MODE=token

# amoCRM (token mode)
AMOCRM_BASE_URL=https://your-domain.amocrm.ru
AMOCRM_ACCESS_TOKEN=your_access_token

# amoCRM (oauth mode - alternative to token)
# AMOCRM_CLIENT_ID=your_client_id
# AMOCRM_CLIENT_SECRET=your_client_secret
# AMOCRM_REDIRECT_URI=https://your-redirect-uri
